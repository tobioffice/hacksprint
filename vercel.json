{
  "version": 2,
  "name": "library-management-system",
  "buildCommand": "npm install -g pnpm && cd frontend && pnpm install && pnpm run build && cd ../backend && pnpm install && pnpm run build",
  "outputDirectory": "backend/dist",
  "installCommand": "npm install -g pnpm && pnpm install",
  "framework": null,
  "functions": {
    "backend/dist/server.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/dist/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/backend/dist/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}